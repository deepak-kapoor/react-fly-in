{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "baseUrl": "src",
  },

  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./__mocks__/**/*",
    "**/__tests__/**/*",
    "node_modules"
  ]
}
